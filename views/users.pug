extends layout

block content
    div.text-center
        form(class="form-signin" method="POST" action="/users/authActions")
            - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
            h1(class=h1Classes) wellcome Dear #{username}!

            //-signout button
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass name="authaction" type="submit" value="logout") Sign out
            
            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass name="authaction" type="submit" value="refresh") Refresh token

            - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
            button(class=buttonClass name="authaction" type="submit" value="validate") Validate token
            <br />
            if operation_executed
                - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
                h1(class=h1Classes) #{operation} result: #{operation_result}

            - var pClasses=['mt-5', 'mb-3', 'text-muted'];
            p(class=pClasses) &copy; Nicola C.